import { useState } from "react";

function Counter() {
  // Initialize state
  const [count, setCount] = useState(0);

  // Function to update state
  function increment() {
    setCount(count + 1);
  }

  // Render JSX
  return (
    <div>
      <p>{count}</p>
      <button onClick={increment}>Increment</button>
    </div>
  );
}

export default Counter;
